<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.ece.gestionnairetaches.FormulairesController"
      spacing="8"
      prefWidth="600"
      prefHeight="400"
      style="-fx-background-color: #f5f2e8;">

    <padding>
        <Insets top="15" right="20" bottom="15" left="20"/>
    </padding>

    <Label text="Nouvelle tâche"
           style="-fx-font-size: 18px; -fx-text-fill: #355e3b; -fx-font-weight: bold;"/>

    <Label text="Projet :"/>
    <ComboBox fx:id="projectCombo" prefWidth="300"/>

    <Label text="Titre :"/>
    <TextField fx:id="titleField" prefWidth="300"/>

    <Label text="Statut :"/>
    <ComboBox fx:id="statusCombo" prefWidth="200"/>

    <Label text="Échéance :"/>
    <DatePicker fx:id="dueDatePicker" prefWidth="200"/>

    <Label text="Assignée à :"/>
    <ComboBox fx:id="assigneeCombo" prefWidth="300"/>

    <Label text="Description :"/>
    <TextArea fx:id="descriptionArea" prefHeight="80"/>

    <!-- Label erreur ajouté ici -->
    <Label fx:id="errorLabel"
           text=""
           visible="false"
           style="-fx-text-fill: red; -fx-font-size: 12px;"/>

    <HBox spacing="10">
        <Button fx:id="saveButton" text="Enregistrer" onAction="#onSave"
                style="-fx-background-color: #6c8f6b; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button fx:id="cancelButton" text="Annuler" onAction="#onCancel"
                style="-fx-background-color: #d1c7b3; -fx-text-fill: black;"/>
    </HBox>

</VBox>
