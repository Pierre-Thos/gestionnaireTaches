<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.ece.gestionnairetaches.controller.LoginController" prefWidth="300" prefHeight="400">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Connexion" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Mot de passe"/>
    <Button text="Se connecter" onAction="#handleLogin" maxWidth="Infinity" style="-fx-background-color: #007bff; -fx-text-fill: white;"/>

    <Hyperlink text="Pas de compte ? CrÃ©er un compte" onAction="#goToSignup"/>

    <Label fx:id="errorLabel" textFill="red"/>
</VBox>