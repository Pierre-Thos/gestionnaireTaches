<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane styleClass="root-pane" stylesheets="@styles.css"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="fr.ece.gestionnairetaches.controller.SignupController"
           prefWidth="500" prefHeight="650">

    <VBox styleClass="card-pane" alignment="CENTER" spacing="12" maxWidth="380" maxHeight="580">

        <Label text="Bienvenue !" styleClass="title-label"/>
        <Label text="Créez votre compte en quelques secondes" styleClass="subtitle-label"/>

        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Email Professionnel"/>
            <TextField fx:id="emailField" promptText="utilisateur@ece.fr"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Mot de passe"/>
            <PasswordField fx:id="passwordField" promptText="Au moins 6 caractères"/>
        </VBox>

        <VBox prefHeight="10"/>

        <Button text="S'INSCRIRE" onAction="#handleSignup" maxWidth="Infinity" styleClass="button-success"/>

        <Label fx:id="errorLabel" styleClass="error-label"/>

        <Hyperlink text="J'ai déjà un compte ? Me connecter" onAction="#backToLogin" styleClass="hyperlink"/>
    </VBox>

</StackPane>